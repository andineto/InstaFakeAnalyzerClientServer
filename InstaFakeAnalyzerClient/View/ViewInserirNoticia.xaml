<Window
    x:Class="InstaFakeAnalyzerClient.View.ViewInserirNoticia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Inserir Nova Notícia"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Conteúdo da Notícia:" />
        <TextBox
            Grid.Row="1"
            AcceptsReturn="True"
            Text="{Binding Conteudo, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />

        <TextBlock
            Grid.Row="2"
            Margin="0,10,0,0"
            Text="Justificativa:" />
        <TextBox
            Grid.Row="3"
            AcceptsReturn="True"
            Text="{Binding Justificativa, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />

        <CheckBox
            Grid.Row="4"
            Margin="0,10,0,0"
            Content="Fake News?"
            IsChecked="{Binding IsFake}" />

        <Button
            Grid.Row="5"
            Width="120"
            Height="30"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            Command="{Binding VoltarCommand}"
            Content="Voltar" />
        <Button
            Grid.Row="5"
            Width="120"
            Height="30"
            Margin="150,20,0,0"
            HorizontalAlignment="Left"
            Command="{Binding SalvarCommand}"
            Content="Salvar Notícia" />
    </Grid>
</Window>
