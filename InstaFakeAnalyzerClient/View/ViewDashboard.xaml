<Window
    x:Class="InstaFakeAnalyzerClient.View.ViewDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:InstaFakeAnalyzerClient.View"
    Title="Dashboard"
    Width="400"
    Height="500"
    Background="White"
    FontFamily="Segoe UI"
    FontSize="14"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">

    <Grid Margin="30">
        <StackPanel
            Width="250"
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock
                Height="60"
                Margin="0,0,0,20"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#333"
                Text="{Binding Saudacao}"
                TextAlignment="Center" />

            <Button
                Height="40"
                Margin="0,15,0,0"
                Background="#0078D7"
                BorderThickness="0"
                Command="{Binding VerificarCommand}"
                Content="Verificar Notícias"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White"
                Visibility="{Binding VerificarVisibility}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Height="40"
                Margin="0,15,0,0"
                Background="#0078D7"
                BorderThickness="0"
                Command="{Binding CadastrarCommand}"
                Content="Cadastrar Usuário"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White"
                Visibility="{Binding CadastrarVisibility}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Height="40"
                Margin="0,15,0,0"
                Background="#0078D7"
                BorderThickness="0"
                Command="{Binding FalarComChatBotCommand}"
                Content="Falar com ChatBot"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Height="40"
                Margin="0,15,0,0"
                Background="#0078D7"
                BorderThickness="0"
                Command="{Binding EnviarNoticiaCommand}"
                Content="Enviar Nova Notícia"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Height="40"
                Margin="0,15,0,0"
                Background="#D9534F"
                BorderThickness="0"
                Command="{Binding LogoutCommand}"
                Content="Logout"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Window>
