<Window
    x:Class="InstaFakeAnalyzerClient.View.ViewCadastroUsuario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Cadastro de Usuário"
    Width="350"
    Height="500"
    Background="#FFF1F1F1"
    FontFamily="Segoe UI"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Border
        Margin="10"
        Padding="20"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="10">

        <Grid>
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Cadastro de Usuário" />

                <ComboBox
                    Padding="10"
                    FontSize="14"
                    ItemsSource="{Binding TiposUsuario}"
                    SelectedItem="{Binding TipoUsuarioSelecionado, Mode=TwoWay}" />

                <TextBlock Margin="0,0,0,5" Text="Nome:" />
                <TextBox
                    Height="25"
                    Margin="0,0,0,10"
                    FontSize="15"
                    Text="{Binding Nome, Mode=TwoWay}" />

                <TextBlock Margin="0,0,0,5" Text="Nome de Usuário:" />
                <TextBox
                    Height="25"
                    Margin="0,0,0,10"
                    FontSize="15"
                    Text="{Binding NomeUsuario, Mode=TwoWay}" />

                <TextBlock Margin="0,0,0,5" Text="Senha:" />
                <PasswordBox
                    Height="25"
                    Margin="0,0,0,20"
                    FontSize="15"
                    PasswordChanged="txtSenha_PasswordChanged" />
            </StackPanel>

            <Grid
                Width="220"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">

                <Button
                    Width="100"
                    Height="35"
                    HorizontalAlignment="Right"
                    Background="#007ACC"
                    BorderThickness="0"
                    Command="{Binding CommandCadastrar}"
                    Content="Cadastrar"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White" />

                <Button
                    Width="100"
                    Height="35"
                    HorizontalAlignment="Left"
                    Background="#007ACC"
                    BorderThickness="0"
                    Command="{Binding CommandVoltar}"
                    Content="Voltar"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </Grid>
        </Grid>
    </Border>
</Window>
