<Window
    x:Class="InstaFakeAnalyzerClient.View.ViewChatbot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InstaFakeAnalyzerClient.Utils"
    Width="900"
    Height="600"
    Background="#f4f6f8"
    FontFamily="Segoe UI"
    FontSize="14"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>


    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,0,0,25"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#333"
            Text="Análise Inteligente de Notícias" />

        <TextBox
            x:Name="txtNoticia"
            Grid.Row="1"
            Padding="10"
            AcceptsReturn="True"
            Background="White"
            BorderBrush="#ddd"
            BorderThickness="1"
            FontSize="16"
            Text="{Binding NoticiaInput, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <Button
            Grid.Row="2"
            Width="160"
            Height="40"
            Margin="0,15"
            HorizontalAlignment="Center"
            Background="#0078D7"
            Command="{Binding EnviarCommand}"
            Content="Enviar para IA"
            Cursor="Hand"
            FontWeight="SemiBold"
            Foreground="White" />

        <TextBlock
            Grid.Row="3"
            Margin="0,20,0,5"
            FontWeight="SemiBold"
            Foreground="#555"
            Text="Resposta da IA:" />

        <TextBox
            Grid.Row="4"
            Padding="10"
            Background="White"
            BorderBrush="#ddd"
            BorderThickness="1"
            FontSize="16"
            IsReadOnly="True"
            Text="{Binding RespostaIA, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <StackPanel
            Grid.Row="5"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Width="100"
                Height="40"
                HorizontalAlignment="Center"
                Background="#6c757d"
                Command="{Binding VoltarCommand}"
                Content="Voltar"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White" />

        </StackPanel>
        <Grid
            Grid.RowSpan="7"
            Background="#80000000"
            Visibility="{Binding IsLoading, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White">
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Analisando com IA..." />
                    <ProgressBar
                        Width="200"
                        Height="20"
                        IsIndeterminate="True" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
