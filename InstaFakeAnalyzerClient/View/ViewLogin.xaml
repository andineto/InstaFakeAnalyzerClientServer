<Window
    x:Class="InstaFakeAnalyzerClient.View.ViewLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login"
    Width="320"
    Height="360"
    Background="White"
    FontFamily="Segoe UI"
    FontSize="14"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">

    <Window.InputBindings>
        <KeyBinding Key="Return" Command="{Binding LoginCommand}" />
    </Window.InputBindings>

    <Grid Margin="30">
        <StackPanel
            Width="220"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,10,0,50"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#222222"
                Text="InstaFake Analyzer" />
            <Grid>
                <TextBox
                    x:Name="txtUsuario"
                    Width="220"
                    Margin="0,0,0,15"
                    Padding="8"
                    Background="#F5F5F5"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Foreground="#999999"
                    Text="{Binding NomeUsuario}"
                    TextChanged="txtUsuario_TextChanged" />

                <TextBlock
                    x:Name="placeholderUsuario"
                    Margin="12,0,0,15"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="Gray"
                    IsHitTestVisible="False"
                    Text="Nome de Usuario" />

            </Grid>
            <Grid>
                <PasswordBox
                    x:Name="txtSenha"
                    Width="220"
                    Margin="0,0,0,20"
                    Padding="8"
                    Background="#F5F5F5"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    PasswordChanged="txtSenha_PasswordChanged" />

                <TextBlock
                    x:Name="placeholderSenha"
                    Margin="12,0,0,20"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="Gray"
                    IsHitTestVisible="False"
                    Text="Senha" />

            </Grid>

            <Button
                x:Name="btnLogin"
                Height="36"
                Margin="0,20,0,10"
                Background="#0078D7"
                BorderThickness="0"
                Command="{Binding LoginCommand}"
                Content="Login"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
